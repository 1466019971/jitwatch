<project name="jitwatch" default="all" basedir=".">
	<property name="src" value="src/main/java" />
	<property name="bin" value="target/classes" />
	<property name="lib" value="lib" />
	<property environment="env"/>
	
	<target name="init">
		<delete dir="${bin}" />
		<mkdir dir="${bin}" />
	</target>

	<path id="classpath">
		<filelist>
		      	<file name="${env.JAVA_HOME}/jre/lib/jfxrt.jar"/>
			<file name="${env.JAVA_HOME}/lib/tools.jar"/>			
		</filelist>
        </path>

	<target name="compile" depends="init">
		<javac srcdir="${src}" destdir="${bin}" classpathref="classpath" includeantruntime="false" />
	</target>

	<target name="all" depends="compile" />
</project>
